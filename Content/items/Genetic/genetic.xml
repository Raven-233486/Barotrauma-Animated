<?xml version="1.0" encoding="utf-8"?>
<Override>
  <Items>
    <!-- new function for op_researchterminal -->
    <Item identifier="op_researchterminal">
      <inherit identifier="op_researchterminal">
        <doinherit />
        <add sel="./ItemContainer/Containable/@items">
          geneticmaterial,stabilozine,unidentifiedgeneticmaterial,alienblood
        </add>
      </inherit>
    </Item>
    <!-- texture -->
    <Item identifier="genesplicer">
      <inherit identifier="genesplicer">
        <doinherit />
        <del sel="./InventoryIcon"/>
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Genetic/Genetic.png
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/Genetic/Genetic.png
        </replace>
      </inherit>
    </Item>
  </Items>
</Override>