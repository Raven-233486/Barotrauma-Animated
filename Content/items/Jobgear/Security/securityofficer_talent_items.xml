<?xml version="1.0" encoding="utf-8"?>
<Override>
  <Items>
    <item identifier="autoshotgun">
      <inherit identifier="autoshotgun">
        <doinherit />
        <replace sel="./Sprite/@texture">autoshotgun.png</replace>
        <replace sel="./Sprite/@sourcerect">0,0,216,64</replace>
      </inherit>
    </item>
    <item identifier="bandolier">
      <inherit identifier="bandolier">
        <doinherit />
        <replace sel="./Sprite/@texture">bandolier.png</replace>
        <replace sel="./Sprite/@sourcerect">13,16,103,180</replace>
        <replace sel="./Wearable/sprite/@texture">bandolier.png</replace>
        <replace sel="./Wearable/sprite/@sourcerect">13,16,103,180</replace>
        <replace sel="./Wearable/sprite/@origin">0.5,0.661</replace>
        <add sel="./Wearable/sprite/@scale">0.65</add>
      </inherit>
    </item>
    <item identifier="boardingaxe">
      <inherit identifier="boardingaxe">
        <doinherit />
        <replace sel="./InventoryIcon/@texture">%ModDir%/Content/Items/JobGear/TalentGear.png</replace>
        <replace sel="./Sprite/@texture">%ModDir%/Content/Items/JobGear/TalentGear.png</replace>
      </inherit>
    </item>
    <Item identifier="slipsuit">
      <inherit identifier="slipsuit">
        <doinherit />
        <!-- item sprite on ground -->
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/Security/Slipsuit_Items.png
        </replace>
        <!-- contained sprite, Vertical Locker -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainervertical']/@texture">
          %ModDir%/Content/Items/Jobgear/Security/Slipsuit_Items.png
        </replace>
        <!-- contained sprite, Behind Window -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainerwindow']/@texture">
          %ModDir%/Content/Items/Jobgear/Security/slipsuit.png
        </replace>
        <!-- contained sprite, Horizontal Locker -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainerhorizontal']/@texture">
          %ModDir%/Content/Items/Jobgear/Security/Slipsuit_Items.png
        </replace>
        <!-- worn clothing sprites -->
        <!-- replace all first, then replace the head that stands out -->
        <replace sel="./Wearable/sprite/@texture">
          slipsuit.png
        </replace>
        <!-- head -->
        <replace sel="./Wearable/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable/sprite[@limb='Head']/@origin">
          0.51,0.51
        </replace>
        <replace sel="./Wearable/sprite[@limb='Head']/LightComponent/LightTexture/@texture">%ModDir%/Content/Lights/divinghelmetlight.png</replace>
      </inherit>
    </Item>
  </Items>
</Override>