<?xml version="1.0" encoding="utf-8"?>
<Override>
  <Items>
    <item identifier="clownmask">
      <inherit identifier="clownmask">
        <doinherit />
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable/sprite[@name='Clown Mask']/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable/sprite[@name='Clown Mask']/@origin">
          0.5,0.656
        </replace>
      </inherit>
    </item>
    <item identifier="clowncostume">
      <inherit identifier="clowncostume">
        <doinherit />
        <replace sel="./Wearable/sprite/@texture">
          clown.png
        </replace>
        <replace sel="./Wearable/sprite/@hidelimb">
          false
        </replace>
        <replace sel="./Wearable/sprite[@limb='LeftFoot' or @limb='RightFoot']/@hidelimb">
          true
        </replace>
        <del sel="./Wearable/sprite[@limb='LeftFoot' or @limb='RightFoot']/@sound" />
      </inherit>
    </item>
    <item identifier="clownmaskunique">
      <inherit identifier="clownmaskunique">
        <doinherit />
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Sprite/@sourcerect">
          510,200,80,100
        </replace>
        <del sel="./InventoryIcon"/>
        <del sel="./Wearable"/>
        <add sel=".">
          <Wearable limbtype="Head" slots="Any,Head" msg="ItemMsgPickUpSelect">
            <sprite name="Clown Mask Wearable" texture="%ModDir%/Content/Items/Jobgear/headgears.png" limb="Head" inheritlimbdepth="true" inheritscale="true" ignorelimbscale="true" scale="0.5" sourcerect="400,384,112,128" origin="0.6,0.5" />
            <SkillModifier skillidentifier="helm" skillvalue="10" />
            <SkillModifier skillidentifier="weapons" skillvalue="10" />
            <SkillModifier skillidentifier="mechanical" skillvalue="10" />
            <SkillModifier skillidentifier="electrical" skillvalue="10" />
            <SkillModifier skillidentifier="medical" skillvalue="10" />
            <damagemodifier afflictionidentifiers="blunttrauma,lacerations,gunshotwound" armorsector="0.0,360.0" damagemultiplier="0.2" damagesound="LimbArmor" deflectprojectiles="true" />
            <damagemodifier afflictionidentifiers="bitewounds" armorsector="0.0,360.0" damagemultiplier="0.3" damagesound="LimbArmor" deflectprojectiles="true" />
            <damagemodifier afflictiontypes="bleeding" armorsector="0.0,360.0" damagemultiplier="0.1" damagesound="LimbArmor" deflectprojectiles="true" />
            <damagemodifier afflictionidentifiers="concussion" armorsector="0.0,360.0" damagemultiplier="0.0" damagesound="" deflectprojectiles="true" />
            <StatusEffect tags="clown" type="OnWearing" target="Character" HideFace="true" duration="0.1" stackable="false" />
            <StatusEffect type="OnWearing" target="This" targetitemcomponent="StatusHUD" drawhudwhenequipped="false" overlaycolor="0,0,0,0" range="3000" thermalgoggles="false" showdeadcharacters="false" showtexts="false" />
            <StatusEffect type="OnWearing" target="This" targetitemcomponent="StatusHUD" drawhudwhenequipped="true" overlaycolor="176,0,0,0" range="3000" thermalgoggles="true" showdeadcharacters="false" showtexts="false">
              <RequiredItem items="thermalgoggles" type="Contained" />
            </StatusEffect>
            <StatusEffect type="OnWearing" target="This" targetitemcomponent="StatusHUD" drawhudwhenequipped="true" overlaycolor="0,176,0,0" range="3000" thermalgoggles="false" showdeadcharacters="false" showtexts="true">
              <RequiredItem items="healthscanner" type="Contained" />
            </StatusEffect>
            <ItemContainer hideitems="true" capacity="1" maxstacksize="1" containedstateindicatorstyle="" containedspritedepths="0.551,0.552">
              <Containable items="healthscanner,thermalgoggles" excludebroken="false" />
              <SlotIcon slotindex="0" texture="%ModDir%/Content/items/weapons/Waifu_UI.png" sourcerect="120,0,120,120" origin="0.5,0.5" />
            </ItemContainer>
            <StatusHUD drawhudwhenequipped="false" overlaycolor="0,0,0,0" range="0" thermalgoggles="false" showdeadcharacters="false" showtexts="false" />
          </Wearable>
        </add>
      </inherit>
    </item>
    <item identifier="clownsuitunique">
      <inherit identifier="clownsuitunique">
        <doinherit />
        <del sel="./Wearable"/>
        <add sel=".">
          <Wearable slots="Any,InnerClothes" msg="ItemMsgPickUpSelect">
            <sprite name="Legendary Clown's Clothes 2 Torso" texture="clown_rare.png" limb="Torso" hidelimb="false" inherittexturescale="true" inheritorigin="false" inheritsourcerect="false" sourcerect="160,0,148,220" origin="0.5203,0.4364" />
            <sprite name="Legendary Clown's Clothes 2 Right Hand" texture="clown_rare.png" limb="RightHand" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="false" sourcerect="308,184,64,48" />
            <sprite name="Legendary Clown's Clothes 2 Left Hand" texture="clown_rare.png" limb="LeftHand" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="false" sourcerect="372,184,64,48" />
            <sprite name="Legendary Clown's Clothes 2 Left Lower Arm" texture="clown_rare.png" limb="LeftForearm" hidelimb="true" inherittexturescale="true" inheritorigin="false" inheritsourcerect="false" sourcerect="372,96,64,88" origin="0.5,0.3636" />
            <sprite name="Legendary Clown's Clothes 2 Right Lower Arm" texture="clown_rare.png" limb="RightForearm" hidelimb="true" inherittexturescale="true" inheritorigin="false" inheritsourcerect="false" sourcerect="308,96,64,88" origin="0.5,0.3636" />
            <sprite name="Legendary Clown's Clothes 2 Left Upper Arm" texture="clown_rare.png" limb="LeftArm" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="false" sourcerect="372,0,64,96" />
            <sprite name="Legendary Clown's Clothes 2 Right Upper Arm" texture="clown_rare.png" limb="RightArm" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="false" sourcerect="308,0,64,96" />
            <sprite name="Legendary Clown's Clothes 2 Waist" texture="clown_rare.png" limb="Waist" hidelimb="false" inheritorigin="true" inherittexturescale="true" inheritsourcerect="false" sourcerect="160,220,112,60" origin="0.5,0.53333" />
            <sprite name="Legendary Clown's Clothes 2 Right Thigh" texture="clown_rare.png" limb="RightThigh" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
            <sprite name="Legendary Clown's Clothes 2 Left Thigh" texture="clown_rare.png" limb="LeftThigh" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
            <sprite name="Legendary Clown's Clothes 2 Right Leg" texture="clown_rare.png" limb="RightLeg" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
            <sprite name="Legendary Clown's Clothes 2 Left Leg" texture="clown_rare.png" limb="LeftLeg" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="true" />
            <sprite name="Legendary Clown's Clothes 2 Right Shoe" texture="clown_rare.png" limb="RightFoot" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="false" sourcerect="308,232,64,48" />
            <sprite name="Legendary Clown's Clothes 2 Left Shoe" texture="clown_rare.png" limb="LeftFoot" hidelimb="false" inherittexturescale="true" inheritorigin="true" inheritsourcerect="false" sourcerect="372,232,64,48" />
            <!-- HöNK -->
            <damagemodifier afflictiontypes="damage" armorsector="0.0,360.0" damagesound="LimbClown" />
            <damagemodifier afflictiontypes="damage" armorsector="0.0,360.0" damagesound="LimbClown" />
            <damagemodifier afflictionidentifiers="blunttrauma,lacerations,gunshotwound,bitewounds" armorsector="0.0,360.0" damagemultiplier="0.65" />
          </Wearable>
        </add>
      </inherit>
    </item>
  </Items>
</Override>