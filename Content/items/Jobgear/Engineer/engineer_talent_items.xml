<?xml version="1.0" encoding="utf-8"?>
<Override>
  <Items>
    <!-- increase maxcondition -->
    <item identifier="smgmagazinedepletedfuel">
      <inherit identifier="smgmagazinedepletedfuel">
        <doinherit/>
      </inherit>
      <!-- change texture -->
      <InventoryIcon texture="%ModDir%/Content/Items/Weapons/weapons_new.png" sourcerect="228,172,28,26" />
      <Sprite texture="%ModDir%/Content/Items/Weapons/weapons_new.png" depth="0.54" sourcerect="228,172,28,26" origin="0.5,0.5" />
    </item>
    <Item identifier="thermalgoggles">
      <inherit identifier="thermalgoggles">
        <doinherit />
        <replace sel="./@tags">
          smallitem,clothing,Wf_helmet_module
        </replace>
        <replace sel="./InventoryIcon/@texture">
          %ModDir%/Content/Items/JobGear/TalentGear.png
        </replace>
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/JobGear/TalentGear.png
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/JobGear/TalentGear.png
        </replace>
      </inherit>
    </Item>
    <item identifier="nucleargun">
      <inherit identifier="nucleargun">
        <doinherit/>
        <replace sel="./Sprite/@texture">%ModDir%/Content/Items/JobGear/TalentGear.png</replace>
        <replace sel="./Wearable/sprite/@texture">%ModDir%/Content/Items/JobGear/TalentGear.png</replace>
      </inherit>
    </item>
    <Item identifier="pucs">
      <inherit identifier="pucs">
        <doinherit />
        <!-- item sprite on ground -->
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/Engineer/PUCS_Items.png
        </replace>
        <!-- contained sprite, Vertical Locker -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainervertical']/@texture">
          %ModDir%/Content/Items/Jobgear/Engineer/PUCS_Items.png
        </replace>
        <!-- contained sprite, Horizontal Locker -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainerhorizontal']/@texture">
          %ModDir%/Content/Items/Jobgear/Engineer/PUCS_Items.png
        </replace>
        <!-- worn clothing sprites -->
        <!-- replace all first, then replace the head that stands out -->
        <replace sel="./Wearable/sprite/@texture">
          pucs.png
        </replace>
        <!-- head -->
        <replace sel="./Wearable/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable/sprite[@limb='Head']/@origin">
          0.53,0.55
        </replace>
        <replace sel="./Wearable/sprite[@limb='Head']/LightComponent/LightTexture/@texture">%ModDir%/Content/Lights/divinghelmetlight.png</replace>
      </inherit>
    </Item>
  </Items>
</Override>